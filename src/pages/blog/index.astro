---
import BasePage from "../../layouts/BasePage.astro";
import FormattedDate from "../../components/FormattedDate.astro";
import { SITE_TITLE, BLOG_TITLE, BLOG_DESCRIPTION } from "../../consts";
import { getCollection } from "astro:content";

const posts = (await getCollection("blog")).sort(
  (a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf(),
);
---

<BasePage title=`Blog | ${SITE_TITLE}` description={BLOG_DESCRIPTION}>
  <div class="mb-8 flex flex-row content-center">
    <h1 class="grow text-3xl font-extrabold">{BLOG_TITLE}</h1>
    <a href="/blog/feed.xml" target="_blank">
      <svg viewBox="0 0 8 8" width="36" height="36">
        <rect class="fill-orange-500" width="8" height="8" rx="1.5"></rect>
        <circle fill="white" cx="2" cy="6" r="1"></circle>
        <path fill="white" d="m 1,4 a 3,3 0 0 1 3,3 h 1 a 4,4 0 0 0 -4,-4 z"
        ></path>
        <path fill="white" d="m 1,2 a 5,5 0 0 1 5,5 h 1 a 6,6 0 0 0 -6,-6 z"
        ></path>
      </svg>
    </a>
  </div>
  <section>
    <ul class="grid grid-cols-1 md:grid-cols-2">
      {
        posts.map((post, x) => (
          <li
            class:list={[
              "rounded-md p-2 hover:bg-blue-400/10",
              { "md:col-span-2": x === 0 },
            ]}
          >
            <a
              class="visited:text-purple-700 dark:visited:text-purple-400"
              href={`/blog/${post.id}/`}
            >
              {post.data.heroImage ? (
                <img
                  class:list={[
                    "h-36 w-md rounded-md object-cover object-center shadow-sm shadow-slate-400 md:w-full dark:shadow-slate-600",
                    { "md:h-72": x === 0 },
                  ]}
                  src={post.data.heroImage}
                  alt={post.data.heroImageAlt}
                />
              ) : (
                <div
                  class:list={[
                    "h-36 w-md rounded-md bg-rose-200 md:w-full",
                    { "md:h-72": x === 0 },
                  ]}
                />
              )}
              <h4 class="text-2xl font-semibold">{post.data.title}</h4>
              <p class="text-black italic dark:text-white">
                <FormattedDate date={post.data.pubDate} />
              </p>
            </a>
          </li>
        ))
      }
    </ul>
  </section>
</BasePage>
