---
import { getRelativeLocaleUrl } from "astro:i18n";

import type { HTMLAttributes } from "astro/types";

type Props = HTMLAttributes<"a">;

const { href, class: className, ...props } = Astro.props;
let pathname = "/" + Astro.url.pathname.replace(import.meta.env.BASE_URL, "");
const hrefstr = href!.toString();

const locale = Astro.currentLocale ?? "";
if (locale && !pathname.startsWith(locale, 1)) {
  pathname = getRelativeLocaleUrl(locale, pathname);
}

const isActive = hrefstr.includes("blog")
  ? pathname.startsWith(hrefstr)
  : pathname == hrefstr;
---

<a
  class:list={[
    className,
    "decoration-theme-accent dark:decoration-theme-dark-accent hover:text-shadow-theme-accent/30 dark:hover:text-shadow-theme-dark-accent/75 inline-block text-lg font-semibold decoration-4 transition-shadow hover:text-shadow-lg",
    { "font-bold underline": isActive },
  ]}
  href={href}
  {...props}
>
  <slot />
</a>
