---
interface Props {
  date: Date;
  class?: string | null;
}

const { date, class: className } = Astro.props;
---

<time class={className} datetime={date.toISOString()}>
  {
    date.toLocaleDateString(Astro.currentLocale, {
      year: "numeric",
      month: "short",
      day: "numeric",
    })
  }
</time>
